		Button:
			id: SharedWishlists #sets ID to shared wishlsits
			size_hint: 0.5,0.15 #sets size of buton dynamic to size of root widget
			pos: (root.width/2)*0.5,(root.height/2)*0.5 #sets position dynamic to size of window
			text: "[color=#ffffff]SHARED WITH\n ME[/color]" #sets text to SHARED WITH ME in white
			markup: True #allows for markup of text
			size: self.texture_size #sets size to texture size, allowing for text wraapping
			font_size: root.height/15 #sets font_size dynamic to window size
			padding_y: 10 #sets verticla padding to 10
			background_color: rgba_greenblue #sets background color of button to greenblue
			halign: 'center' #sets horizontal align of text to center
			on_press: app.root.current = 'SharedWishlists' #takes user to shared wishlsits when button is clicked

<MyWishlists>:
	name: "MyWishlists"
    FloatLayout:
        id: RightPanel
        #Draw before widgets
        canvas.before:
            Color:
                rgba:  rgba_lightblue#Sets the background colour of the right panel to lightblue
            Rectangle:
                # self here refers to the widget i.e FloatLayou
                pos: self.pos
                size: self.size
			#Left panel
        	Color:
				rgba: (rgba_darkblue) #sets background color of left panel to Darkblue
			Rectangle:
				pos: 0, 0
				size: root.width/6, root.height
			#green panel in left panel
			Color:
				rgba: rgba_greenblue#Sets the background colour of the right panel to lightblue
			RoundedRectangle:
				size: (root.width/7,root.height/1.5)
				pos: (root.width* 0.015, root.height * 0.1)
		#-------DEFINES THE LABEL - NAME OF THE WISHLSIT ------------
		Label:
			id: WishlistNameLabel
			text: ''
			size_hint: None,None
			font_size: root.height/10
			size: root.width/4, root.height/3
			pos: root.width/8 * 3.5, root.height/2*1.4
			color: (0,0,0,1)
		#-------DEFINES THE SAVE BUTTON-----
		ImageButton:
			id: SaveButton#sets id to SaveButton
			source: "../assets/saveicon.png" #sets source of image
			size_hint: 0.15, 0.15
			pos: root.width/8 * 1.5, root.height/4 * 3.15 #sets position of image
			on_press: root.pressed_save_button() #calls pressed_save_buton() when pressed
			on_release: root.released_save_button() #calls released_save_button() when released
			allow_stretch: True #Allow strech or 1:1 ratio will remain forever
			keep_ratio: False #Keep ratio = false, or 1:1 ratio wil remain forever
			opacity: 0
		#------DEFINES THE SHARE BUTON
		ImageButton:
			id: ShareButton #sets id to ShareButton
			source: "../assets/shareicon.png" #sets source of image
			size_hint: 0.15, 0.15
			pos: root.width/8 * 6.5, root.height/4 * 3.2 #sets position of image
			on_press: root.pressed_share_button() #calls pressed_share_buton() when pressed
			on_release: root.released_share_button() #calls released_share_button() when released
			allow_stretch: True #Allow strech or 1:1 ratio will remain forever
			keep_ratio: False #Keep ratio = false, or 1:1 ratio wil remain forever
			opacity: 0
		#-----DEFINES THE HOME BUTTON----
		ImageButton:
			id: HomeButton
			pos: root.width/8 * 0.2, root.height/4 * 0.5
			source: "../assets/homeicon.png"
			size_hint: 0.04,0.04
			allow_stretch: True #Allow strech or 1:1 ratio will remain forever
			keep_ratio: False #Keep ratio = false, or 1:1 ratio wil remain forever
			on_press: app.root.current = "Menu"

		#-------DEFINES THE NEW WISHLIST BUTON ------
		ImageButton:
			id: NewWishlist #sets id to ShareButton
			source: "../assets/plusbutton.png" #sets source of image
			size_hint: 0.035, 0.035
			pos: root.width/8 * 0.60, root.height/4 * 0.5
			on_press: root.pressed_new_wishlist_button() #calls pressed_share_buton() when pressed
			on_release: root.released_new_wishlist_button() #calls released_share_button() when released
			allow_stretch: True #Allow strech or 1:1 ratio will remain forever
			keep_ratio: False #Keep ratio = false, or 1:1 ratio wil remain forever

		#-------DEFINES THE EDIT BUTON FOR LIST OF WISHLISTS ------
		ImageButton:
			id: EditWishlists #sets id to ShareButton
			source: "../assets/editicon.png" #sets source of image
			size_hint: 0.02, 0.035
			pos: root.width/8 , root.height/4 * 0.5
			on_press: root.pressed_edit_button() #calls pressed_share_buton() when pressed
			on_release: root.released_edit_button() #calls released_share_button() when released
			allow_stretch: True #Allow strech or 1:1 ratio will remain forever
			keep_ratio: False #Keep ratio = false, or 1:1 ratio wil remain forever


		#-----DEFINES THE SCROLL VIEW FOR THE WISHLIST ITEMS -------
